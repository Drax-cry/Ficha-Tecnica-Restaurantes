@* Reusable language switcher component *@
<div class="language-switcher" data-language-switcher>
    <span class="language-switcher-label" data-i18n-en="Language">Idioma</span>
    <div class="language-switcher-options" role="group" aria-label="Idioma" data-i18n-target="aria-label" data-i18n-en="Language">
        <button type="button" class="language-switcher-option is-active" data-language-option="pt" aria-pressed="true">PT</button>
        <button type="button" class="language-switcher-option" data-language-option="en" aria-pressed="false">EN</button>
    </div>
</div>
